{
  "name": "team-blog",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "docs:dev": "npm run generate:all && concurrently \"npm run watch:generate\" \"vitepress dev docs\"",
    "docs:build": "npm run generate:all && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "generate:stats": "ts-node scripts/generateStats.ts",
    "generate:recently-posts": "bash scripts/generate_recently_posts.sh",
    "generate:content-index": "bash scripts/generate_content_index.sh",
    "generate:sidebar": "bash scripts/generate_sidebar.sh",
    "generate:all": "npm run generate:content-index && npm run generate:sidebar && npm run generate:recently-posts",
    "watch:generate": "chokidar 'docs/content/**/*.md' -i 'docs/content/index.md' -c 'npm run generate:all' --debounce 500",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "docker:start": "npm run docker:build && npm run docker:up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  }
}
